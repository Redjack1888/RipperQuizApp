<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowDx">-8</item>
        <item name="android:shadowDy">-8</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textViewStyle" >
        <item name="android:padding">@dimen/margin_or_padding</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewStyle" >
        <item name="android:layout_marginLeft">@dimen/margin_or_padding</item>
        <item name="android:layout_marginRight">@dimen/margin_or_padding</item>
    </style>

    <style name="answerStyle" >
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/margin_or_padding</item>
    </style>
</resources>
